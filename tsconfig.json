{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",

    "typeRoots": [
      "./node_modules/@types",
      "./src/@types",
      "./src/types"
    ],

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,

    "incremental": true,
    "noEmit": false,
    "skipLibCheck": true
  }
}
